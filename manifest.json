{
  "manifest_version": 2,
  
  "name": "Auto Prerender",
  "version": "0.1",
  
  "description": "Automatically prerender links on hover.",
  
  "background": {
    "persistent": true, // TODO: set to false when done testing
    "scripts": ["eventPage.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["script.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "http://*/*",
    "https://*/*",
    "privacy",
    "tabs"
  ]
}
